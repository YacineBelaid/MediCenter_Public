generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/Auth_DMC"
}

model pro_sante {
  id        Int             @id @default(autoincrement()) @db.UnsignedInt
  genre     pro_sante_genre @default(F)
  telephone Int
  medecin   Boolean?
}

model users {
  id             Int       @id @db.UnsignedInt
  email          String    @default("") @db.VarChar(1000)
  password       String    @default("") @db.VarChar(1000)
  created_at     DateTime  @default(now()) @db.Timestamp(0)
  updated_at     DateTime  @default(now()) @db.Timestamp(0)
  pro_sante      Boolean?
  date_naissance DateTime? @db.Date
  nom            String?   @db.VarChar(1000)
  prenom         String?   @db.VarChar(1000)
}

enum pro_sante_genre {
  F
  M
  A
}
